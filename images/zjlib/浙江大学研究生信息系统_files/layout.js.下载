$(document).ready(function(){
	$(".current").addClass("navtri");
	
	$('.layout_main').mouseover(function() {
		// hide
		$(".tabUl").addClass("hide");
		$(".tabDiv").removeClass("navtri");
		// display current sub-menu
		var current_id = $('.grs-header .current').attr('id');
		$("."+current_id).removeClass("hide");
		$(".current").addClass("navtri");
	});
	
	$(".tabDiv").mouseover(function() {
		$(".tabDiv").removeClass("navtri");
		$(".tabUl").addClass("hide");
		$("."+this.id).removeClass("hide");
		$(this).addClass("navtri");
	});

});